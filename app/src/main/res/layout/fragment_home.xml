<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_centerHorizontal="true"
       android:layout_margin="30dp"
       android:background="@color/heading"
       android:layout_above="@+id/daashboard_lay_linear"
       android:orientation="vertical"
       >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textColor="@color/white"
          android:text="@string/app_name"
          android:gravity="center"
          android:textSize="40sp"
         android:fontFamily="cursive"/>

   </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/daashboard_lay_linear">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:columnCount="4"
       android:orientation="horizontal"
       >

      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/background_outline"
          android:layout_margin="15dp"
          android:layout_weight="1"
          >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="2dp"
             android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_grid_on_24px"
               />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:text="Time Table"
               android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

         </LinearLayout>



      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/background_outline"
          android:layout_margin="15dp"
          android:layout_weight="1"
          >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="2dp"
             android:layout_gravity="center"
             >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_present_to_all_24px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

         </LinearLayout>



      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/background_outline"
          android:layout_margin="15dp"
          android:layout_weight="1"
          >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="2dp"
             android:layout_gravity="center"
             >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_local_activity_24px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Curricular"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

         </LinearLayout>



      </androidx.cardview.widget.CardView>


   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:columnCount="4"
       android:orientation="horizontal"
       >

      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/background_outline"
          android:layout_margin="15dp"
          android:layout_weight="1"
          >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="2dp"
             android:layout_gravity="center"
             >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_home_work_24px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Work"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

         </LinearLayout>



      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/background_outline"
          android:layout_margin="15dp"
          android:layout_weight="1"
          >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="2dp"
             android:layout_gravity="center"
             >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_library_books_24px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

         </LinearLayout>



      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/background_outline"
          android:layout_margin="15dp"
          android:layout_weight="1"
          >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="2dp"
             android:layout_gravity="center"
             >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_sports_handball_24px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Holidays"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

         </LinearLayout>



      </androidx.cardview.widget.CardView>


   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:columnCount="4"
       android:orientation="horizontal">

      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/background_outline"
          android:layout_margin="15dp"
          android:layout_weight="1"
          >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="2dp"
             android:layout_gravity="center"
             >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_money_24px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fee"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

         </LinearLayout>



      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/background_outline"
          android:layout_margin="15dp"
          android:layout_weight="1"
          >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="2dp"
             android:layout_gravity="center"
             >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_360_24px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transport"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

         </LinearLayout>



      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/background_outline"
          android:layout_margin="15dp"
          android:layout_weight="1"
          >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="2dp"
             android:layout_gravity="center"
             >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_grid_on_24px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textStyle="bold"/>

         </LinearLayout>



      </androidx.cardview.widget.CardView>


   </LinearLayout>

</LinearLayout>







</RelativeLayout>